[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
color0 = ${xrdb:color0}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
color7 = ${xrdb:color7}


[bar/top]
monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 30
radius = 2.0

background = ${colors.background}
foreground = ${colors.foreground}

border-left-size = 12 # margin left
border-right-size = 12 # margin right
border-top-size = 5

padding-left = 0
padding-right = 3

module-margin-left = 2
module-margin-right = 4

font-0 = PragmataPro Bold Nerd Font:size=10;1
font-1 = FontAwesome:size=13;2

# modules-left = hostname
modules-left = i3
modules-center = xwindow
modules-right = volume redshift cpu memory wifi battery date power_menu

# Module for window title
[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%

# Module for i3 workspaces
[module/i3]
type = internal/i3
# Icons
ws-icon-[0-9]+ = label;icon
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-6 = 6;
ws-icon-7 = 7;
ws-icon-8 = 8;
ws-icon-9 = 9;
ws-icon-0 = 10;
ws-icon-default = 
strip-wsnumbers = true
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
wrapping-scroll = false
label-mode-padding = 3
label-mode-background = ${colors.background}
label-focused = "%icon%"
label-focused-background = ${colors.color4}
label-focused-underline = ${colors.color1}
label-focused-padding = 3
label-unfocused = "%icon%"
label-unfocused-padding = 3
label-urgent = "%icon%"
label-urgent-background = ${colors.color1}
label-urgent-underline = ${colors.color4}
label-urgent-padding = 3

# Module for RAM Memory
[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.color3}
label = %gb_used%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = ""
format-prefix-foreground = ${colors.color3}
label =   %percentage%%
label-padding-left = 1

# Module for wifi
[module/wifi]
type = internal/network
interface = wlp3s0
interval = 3.0
format-connected = <ramp-signal> <label-connected>
label-connected = " %essid%"
format-disconnected = <label-disconnected>
label-disconnected = " ..."
label-disconnected-foreground = ${colors.color1}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.color1}

# Module for date & time
[module/date]
type = internal/date
interval = 1
format-prefix = "  "
format-prefix-foreground = ${colors.color4}
date = %b %d, %H:%M
label = %date%

# Module for volume
[module/volume]
type = internal/volume
format-volume = <label-volume>
format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.color4}
label-volume = %percentage% %
format-muted-prefix = "  "
format-muted-prefix-foreground = ${colors.color4}
label-muted = "Muted"

# Module for battery
[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 100
format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.color2}
format-charging-prefix = " "
format-discharging = <ramp-capacity> <label-discharging>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.color2}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground-0 = ${colors.color1}
ramp-capacity-foreground-1 = ${colors.color6}
ramp-capacity-foreground-2 = ${colors.color2}
ramp-capacity-foreground-3 = ${colors.color2}
ramp-capacity-foreground-4 = ${colors.color2}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground-0 = ${colors.color1}
animation-charging-foreground-1 = ${colors.color6}
animation-charging-foreground-2 = ${colors.color2}
animation-charging-foreground-3 = ${colors.color2}
animation-charging-foreground-4 = ${colors.color2}
animation-charging-framerate = 350

# Module for power menu
[module/power_menu]
type = custom/menu
format-foreground = ${colors.color1}
format = <label-toggle> <menu>
format-padding = 0
format-margin = 0
menu-0-0 = "  Power Off | "
menu-0-0-exec = shutdown now
menu-0-1 = "  Reboot | "
menu-0-1-exec = reboot
menu-0-2 =  "  Cancel "
label-open = 
label-close =

[module/redshift]
type = custom/script
interval = 5
exec = ~/.config/polybar/scripts/redshift.sh

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
