#color
readonly WARNING=#FF5252
readonly DEFAULT="${BLOCK_COLOR:-#C9CCDB}"

result=$(nmcli -t -f type,state,connection d |
                            egrep '^tun|tap' |
                            grep 'connected' |
                            awk -F':' '{print $3}')

echo " "        #long text
echo " "        #short text


if [[ -z "$result" ]];
then
    echo "${WARNING}"
else
    echo "${DEFAULT}"
fi
